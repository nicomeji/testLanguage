<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/util  http://www.springframework.org/schema/util/spring-util-3.1.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:lineParserDescriptions.properties" />
    <util:properties id="magic" location="classpath:lineParserDescriptions.properties"/> <!-- This can be inyected -->

    <bean id="cmdlineProcessor" class="parser.cmdline.ArgumentsProcessor">
        <constructor-arg ref="sourceFiles" />
    </bean>

    <bean id="sourceFiles" class="org.apache.commons.cli.Option">
        <constructor-arg type="java.lang.String" value="f" />
        <constructor-arg type="java.lang.String" value="source-files" />
        <constructor-arg type="boolean" value="true" />
        <constructor-arg type="java.lang.String" value="${sourceFilesOptDescription}" />
    </bean>
</beans>
